{
    # Global options
    auto_https off
    admin off
}

:8080 {
    # Set document root
    root /app/public

    php_server {
        root /app/public
        file_server off
        worker {
            file index.php
            watch /app/public/index.php
            watch /app/src
        }
    }

    # Handle preflight requests
    @options method OPTIONS
    respond @options 200
    
    # Logging
    log {
        output stdout
        format console
    }
}
